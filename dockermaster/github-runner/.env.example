# GitHub Runner Configuration
# Copy this file to .env and configure with your values

# Runner Configuration
RUNNER_NAME=dockermaster-runner
RUNNER_GROUP=default
LABELS=self-hosted,linux,x64,dockermaster,docker

# GitHub Authentication
# Generate a Personal Access Token with repo scope
# Or use a GitHub App token for better security
GITHUB_TOKEN=your_github_personal_access_token_here

# Runner Behavior
EPHEMERAL=false  # Set to true for ephemeral runners (clean environment each run)
DISABLE_AUTO_UPDATE=false  # Set to true to prevent automatic runner updates

# Optional: Organization runner (if not using repository runner)
# ORG_NAME=your-organization-name

# Optional: Enterprise runner
# ENTERPRISE_NAME=your-enterprise-name